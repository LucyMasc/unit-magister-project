<div class="container mt-5 p-4">
  <h2>Atividades Extracurriculares</h2>
   <%= render partial: "form"%>
  <button type="button" class="add-doc" data-toggle="modal" data-target="#exampleModal">
    <%= link_to '+Adicionar Documento', new_certificate_path, :remote => true, "data-toggle" => "modal", "data-target" => "my-modal", class:"linkto" %>
  </button>
  <hr>

  <table>
    <tr>
      <th>
        Documento
      </th>
      <th style="width: 50%;">
        Atividades
      </th>
      <th>
        Horas
      </th>
      <th>
        Status
      </th>

    <% @certificates.each do |certificate| %>
    <% if current_user.certificates %>
      <tr></tr>
      </tr>
        <td><%= link_to "#{certificate.attachment_identifier}", certificate.attachment_url %></td>
        <td><%= certificate.activity_description %></td>
        <td><%= certificate.hours %>
        <td><%= certificate.status ? "Aprovado" : "Pendente" %></td>
      <tr>
    <% end %>
    <% end %>

    </tr>
  </table>
</div>


