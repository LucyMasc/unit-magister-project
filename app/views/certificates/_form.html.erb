<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Adicionar Certificado</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%# below had to put url because it was not get the route POST /certificates %>
        <%= simple_form_for :certificate, url: :certificates, multipart: true  do |f| %>
        <%= f.input :activity_description, label: 'Atividade' %>
        <%= f.input :hours, label: 'Horas' %>
        <%= f.file_field :attachment %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
         <%= f.submit :Submit, class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>






